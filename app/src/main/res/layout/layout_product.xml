    <ImageButton
        android:id="@+id/imageProduct"
        android:layout_width="match_parent"
        android:layout_height="240dp" />

    <TextView
        android:id="@+id/textProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

